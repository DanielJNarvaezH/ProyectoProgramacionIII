<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.piii.controller.ChatController">
    <TextArea fx:id="textAreaChat" editable="false" />
    <TextField fx:id="textFieldMensaje" promptText="Escribe un mensaje..." />
    <Button fx:id="btnEnviar" text="Enviar" onAction="#enviarMensaje" />
    <Button fx:id="btnAbrirSegundoChat" text="Abrir Segundo Chat" onAction="#abrirSegundoChat" />
</VBox>
